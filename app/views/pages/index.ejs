<!DOCTYPE HTML>
<html lang="pt-br">

<head>
	<meta charset="UTF-8">

	<title>MMORPG - Game of Thrones</title>

	<!-- JQuery -->
	<script src="js/jquery-2.2.1.js"></script>
	<script src="js/index.js"></script>
	<script src="js/behavior.js"></script>

	<!-- bootstrap - link cdn -->
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" integrity="sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7"
	 crossorigin="anonymous">

	<!-- incluindo css -->
	<link href="css/style.css" rel="stylesheet">

</head>

<body class="body-index">

	<nav class="navbar navbar-default navbar-static-top">
		<div class="container">
			<form class="form-inline form-entrar" action="/auth" method="POST">
				<div class="form-group">
					<input type="text" name="user" id="user" placeholder="UsuÃ¡rio" class="form-control" autocomplete="off" value="<%=dadosForm.user%>" />
					<input type="password" name="pass" id="pass" placeholder="Senha" class="form-control" />
					<button id="login_btn" type="submit" class="btn btn-success">Entrar</button>
					<button id="register_btn" type="button" class="btn btn-info">Cadastro</button>
				</div>
			</form>
		</div>
	</nav>

	<div class="container">
		<% if (validacao.length > 0) { %>
		<div class="alert alert-danger">
			<lu>
				<% for (var i = 0; i < validacao.length; i++) { %>
				<li>
					<%= validacao[i].msg %>
				</li>
				<% } %>
			</lu>
		</div>
		<% } %>
		<% if (JSON.stringify(info) != "{}") { %>
		<div class="alert alert-info">
			<li>
				<%= info %>
			</li>
		</div>
		<% } %>

		<div class="row">
			<div class="col-md-2"></div>

			<div class="col-md-8">
				<img src="images/game_of_thrones_logo.jpg" />
			</div>

			<div class="col-md-2"></div>
		</div>
	</div>
	</div>

</body>

</html>